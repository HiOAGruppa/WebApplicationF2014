@model WebAppH2014.Models.Genre

@{
    ViewBag.Title = "Home";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/Item.css" />
    <title>Home</title>
</head>
<body>

    <div class="jumbotron">
        <h1>Tast-En-Tur Tastatur</h1>
        <img id="img-logo" src="~/Resources/Tast1Tur.png" alt="Logo" />
        <p class="lead">Tast-En-Tur er en nettbutikk som strever for å selge de beste og nyeste keyboard'ene med best mulig service.</p>
        <p class="lead">Både nye og eksisterende brukere kan logge inn eller registrere seg med å trykke på "Min Side" øverst.</p>
 
        <p><a href="~/Store" class="btn btn-primary btn-lg">Se utvalg &raquo;</a></p>
    </div>

    <div class="row">
        @{
            var r = new Random();
            int[] used = { -1, -1, -1 };
            for (int i = 0; i < 3; i++)
            {   
                var num = -1;
                while(used.Contains(num))
                {
                    num = r.Next(@Model.Items.Count); 
                }
                used[i] = num;   
                
                var item = Model.Items.ElementAt(num);
                <div class="col-md-4">
                    <div id="content">
                        <a href="~/Store/Details/@(item.SalesItemId)"><img id="item-img" src="~/Resources/@(item.Name).png" alt="Keyboard" /></a>
                        <h2>@item.Name</h2>
                        @if (item.Description.Length > 60)
                        {
                            <p>@(item.Description.Substring(0, 60)) <a href="~/Store/Details/@(item.SalesItemId)"> ...les mer</a></p>
                        }
                        else
                        {
                            <p>@item.Description <a href="~/Store/Details/@(item.SalesItemId)"> ...les mer</a></p>
                            if (item.Description.Length < 30)
                            {
                                <br>
                            }
                        }
                        <div id="price-wrap"><h3>@(item.Price),-</h3></div>
                        <div id="img-wrap"><a href="~/ShoppingCart/AddToCart/@item.SalesItemId"><img id="buy-img" src="~/Resources/button.png" alt="Buy Button" /></a></div>
                    </div>
                </div>
            }
        }
    </div>
</body>
</html>