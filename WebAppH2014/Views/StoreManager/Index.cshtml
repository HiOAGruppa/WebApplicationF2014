@model IEnumerable<WebAppH2014.Models.SalesItem>

@helper Truncate(string input, int length)
{
    if (input.Length <= length)
    {
        @input
    }
    else
    {
        @input.Substring(0, length)<text>...</text>
    }
}

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table>
    <tr>
        <th>
            Genre
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Price
        </th>

        <th>
            InStock
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>
                @Truncate(item.Name, 25)
            </td>
            <td>
                @Truncate(item.Description, 25)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InStock)
            </td>
            <td>
               |
                @Html.ActionLink("Details", "Details", new { id = item.SalesItemId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SalesItemId })
            </td>
        </tr>
    }

</table>
