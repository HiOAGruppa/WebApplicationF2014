@model Model.SalesItem

@{
    ViewBag.Title = "Om";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/Item.css" />
    <title>The Stock</title>
</head>
<body>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>@Html.DisplayFor(model => model.Name)</h2>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-3">
                    <div>
                        <img id="item-img" src="~/Resources/@(@Html.DisplayFor(model => model.ImageUrl)).png" alt="Image of @Model.Name" class="img-rounded" style="width: 300px; height:225px;">
                    </div>
                </div>
                <div class="col-md-5">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayName("Pris")
                        </dt>

                        <dd>
                            @(Html.DisplayFor(model => model.Price)),-
                        </dd>

                        <dt>
                            @Html.DisplayName("Beskrivelse")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Description)
                        </dd>

                        <dt>
                            @Html.DisplayName("På lager")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.InStock)
                        </dd>

                    </dl>
                </div>
            </div>
        </div>

        <div class="panel-footer">
            @Html.ActionLink("Tilbake", "Index", new { tom = "" }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Endre", "Edit", new { id = Model.SalesItemId }, new { @class = "btn btn-success" })

        </div>
    </div>
</body>