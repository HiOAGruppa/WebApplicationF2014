@model WebAppH2014.Models.Genre

@{
    ViewBag.Title = "Browse Albums";
}

<div class="genre">
    <h3><em>@Model.Name</em> Albums</h3>

    <ul>
        @foreach (var item in Model.Items)
        {
            <li>
                <a href="@Url.Action("Details", new { id = item.SalesItemId })">
                    <span>@item.Name</span>
                </a>
            </li>
        }
    </ul>
</div>
