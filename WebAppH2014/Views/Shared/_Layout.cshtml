<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tast-En-Tur</title>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/bootstrap.js"></script>

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/"><img id="img-logo-landscape" src="~/Resources/Tast1TurLandscape.png" alt="Logo" /></a>
            </div>
            <div class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li class="nav-item"> <h2> @{Html.RenderAction("LoginLink", "Login");} </h2> </li>
                    <li class="nav-item"> <h2> @{Html.RenderAction("CartSummary", "ShoppingCart");} </h2></li>
                    <li class="nav-item"> <h2> @Html.ActionLink("DbTest", "Index", "DbTest") </h2></li>
                </ul>
            </div>
        </div>
    </nav>

    @*SIDE BAR*@
    <div id="main-sidebar" class="sidebar-navbar">

        <ul class=" nav">
            <li>@Html.ActionLink("Kategorier", "Index", "Store", new { area = "" }, new { @class = "sidebar-brand" }) </li>
            @{Html.RenderAction("GenreMenu", "Store");}
        </ul>
        <ul class="nav">
            <li>@Html.ActionLink("Bruker", "Index", "Login", new { area = "" }, new { @class = "sidebar-brand" })</li>
            <li>@{Html.RenderAction("LoginLink", "Login", null);}</li>
        </ul>
    </div>

    <div id="main-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tast-En-Tur</p>
        </footer>
    </div>

</body>
</html>