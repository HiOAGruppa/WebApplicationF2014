<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tast-En-Tur</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    @*<link href="~/Content/navmenu-reveal.css" rel="stylesheet" type="text/css" />*@
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var url = document.URL;

            $(".nav li a").each(function () {
                if (this.href == url) {
                    $(this).closest("li").addClass("active");
                }
            });
        });
    </script>

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span> 
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Tast-En-Tur", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index", "Login")" class="navbar-brand">Min Side</a></li>
                    
                    @*@Html.ActionLink("Min Side", "Index", "Login", new { area = "" }, new { @class = "navbar-brand" })</li>*@
                    <li>@{Html.RenderAction("CartSummary", "ShoppingCart", new { @class = "navbar-brand" });}</li>
                    <li>@Html.ActionLink("DbTest", "Index", "DbTest", new { area = "" }, new { @class = "navbar-brand" })</li>
                </ul>
            </div>
        </div>
    </nav>


    @*SIDE BAR*@
    <div class="row">
        <div class="col-sm-2">
            <div id="sidebar" class="navbar navbar-default" style="height:90vh">
                <div class=" nav">
                    @Html.ActionLink("Kategorier", "Index", "Store", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <ul class="nav">
                    @{Html.RenderAction("GenreMenu", "Store");}
                </ul>
            </div>
        </div>

        <div class="col-sm-9">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Tast-En-Tur</p>
            </footer>
        </div>
    </div>
</body>
</html>