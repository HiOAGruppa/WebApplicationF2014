<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tast-En-Tur</title>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/bootstrap.js"></script>

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            var url = document.URL;

            $(".nav li a").each(function () {
                if (this.href == url) {
                    $(this).closest("li").addClass("active");
                }
            });
        });
    </script>

</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/"><img id="img-logo-landscape" src="~/Resources/Tast1TurLandscape.png" alt="Logo" /></a>
                @Html.ActionLink("Tast-En-Tur", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li>@{Html.RenderAction("LoginLink", "Login");}</li>
                    <li>@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>
                    <li>@Html.ActionLink("DbTest", "Index", "DbTest")</li>
                </ul>
            </div>
        </div>
    </nav>


    @*SIDE BAR*@
    <div class="row">
        <div class="col-md-2">
            <div id="sidebar" class="navbar-default" style="height:90vh">
                <div class="nav">
                    @Html.ActionLink("Kategorier", "Index", "Store", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <ul class="nav">
                    @{Html.RenderAction("GenreMenu", "Store");}
                </ul>
            </div>
        </div>

        <div class="col-md-10">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Tast-En-Tur</p>
            </footer>
        </div>
    </div>
</body>
</html>