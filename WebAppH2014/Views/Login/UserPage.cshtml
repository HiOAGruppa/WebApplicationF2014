@model WebAppH2014.Models.User

@{
    ViewBag.Title = "Min Side";
}

<body>
    <h2>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName) sin side</h2>

    <div>
        <h4></h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Fornavn
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt>
                Etternavn
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt>
                Adresse
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>

            <dt>
                Postnummer
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ZipCode)
            </dd>

            <dt>
                Fødselsdato
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateOfBirth)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Min handlevogn", "Index", "ShoppingCart", new { tom = "" }, new { @class = "btn btn-success" })
        @Html.ActionLink("Ordrehistorikk", "UserOrders", new { tom = "" }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Rediger info", "ModifyUser", new { user = User }, new { @class = "btn btn-danger" })
        @Html.ActionLink("Logg ut", "Index", new { tom = "" }, new { @class = "btn btn-default" })
    </p>
</body>