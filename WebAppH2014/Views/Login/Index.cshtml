@model WebAppH2014.Models.UserModifyUser
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Logg inn</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        if (ViewBag.isLoggedIn)
        {
            Response.Redirect("~/Login/UserPage");
        }
        <div style="margin-top:20px">
            <fieldset>
                <legend>Logg inn</legend>

                <div class="editor-label">
                    @Html.Label("Brukernavn")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.UserLogin.UserName)
                    @Html.ValidationMessageFor(model => model.UserLogin.UserName)
                </div>

                <div class="editor-label">
                    @Html.Label("Passord")
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(model => model.OldPassword)
                    @Html.ValidationMessageFor(model => model.OldPassword)
                </div>
                <p>Ny bruker? @Html.ActionLink("Registrer deg her", "Register") </p>
                <p> <input type="submit" value="Logg inn" class="btn btn-success" /> </p>
            </fieldset>
       </div>
    }
</body>
</html>