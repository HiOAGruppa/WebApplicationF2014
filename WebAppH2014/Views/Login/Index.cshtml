@model WebAppH2014.Models.User
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        if (ViewBag.isLoggedIn)
        {
            Response.Redirect("~/Login/User");
        }

        <fieldset>
            <legend>Logg inn</legend>

            <div class="editor-label">
                @Html.LabelFor(model => model.UserLogin.UserName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.UserLogin.UserName)
                @Html.ValidationMessageFor(model => model.UserLogin.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.UserLogin.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.UserLogin.Password)
            </div>

            <br>

            <p>
                <input type="submit" value="Logg inn" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Back to Index", "Index") <br />
        @Html.ActionLink("Register bruker", "Register") <br />
        @Html.ActionLink("Innlogget side", "User") <br />
    </div>
</body>
</html>