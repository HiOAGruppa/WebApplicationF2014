@model WebAppH2014.Models.UserModifyUser
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrer</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Registrer bruker</legend>

            <div class="editor-label">
                @Html.Label("Fornavn")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.FirstName)
                @Html.ValidationMessageFor(model => model.FirstName)
            </div>

            <div class="editor-label">
                @Html.Label("Etternavn")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.LastName)
            </div>

            <div class="editor-label">
                @Html.Label("Brukernavn")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.UserLogin.UserName)
                @Html.ValidationMessageFor(model => model.UserLogin.UserName)
            </div>

            <div class="editor-label">
                @Html.Label("Passord")
            </div>
            <div class="editor-field">
                @Html.PasswordFor(model => model.OldPassword)
                @Html.ValidationMessageFor(model => model.OldPassword)
            </div>

            <br>

            <p>
                <input type="submit" value="Register" />
            </p>
        </fieldset>
    }
    <div>
        @Html.ActionLink("Tilbake", "Index", new { tom = "" }, new { @class = "btn btn-primary" })
    </div>
</body>
</html>